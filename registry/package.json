{
  "name": "beta-parity-react",
  "version": "0.1.4",
  "description": "Parity React Components",
  "main": "ui/index.js",
  "scripts": {
    "dev": "npm run delete:ui && concurrently \"npm run dev:postcss\" \"npm run dev:babel\" \"npm run dev:ts\"",
    "build": "npm run build:ui",
    "publish": "npm run publish:lib",
    "delete:ui": "if exist ui (rmdir /s /q ui)",
    "dev:postcss": "npx postcss src/components/**/*.css --base src/components --dir ui --watch",
    "dev:babel": "npx babel src/components --out-dir ui --extensions \".ts,.tsx\" --watch",
    "dev:ts": "tsc --project tsconfig.lib.json --watch",
    "build:postcss": "npx postcss src/components/**/*.css --base src/components --dir ui",
    "build:babel": "npx babel src/components --out-dir ui --extensions \".ts,.tsx\"",
    "build:ts": "tsc --project tsconfig.lib.json",
    "build:ui": "npm run build:postcss && npm run build:ts && npm run build:babel",
    "install:package": "npm install",
    "publish:lib": "npm run build && npm publish",
    "dev:storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build"
  },
  "keywords": [
    "react",
    "components",
    "ui"
  ],
  "author": "Bitas Labs",
  "license": "ISC",
  "dependencies": {
    "@floating-ui/react": "^0.26.20",
    "beta-parity-react": "file:",
    "classnames": "^2.5.1",
    "flatpickr": "^4.6.13",
    "lucide-react": "^0.379.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-flatpickr": "^3.10.13",
    "react-number-format": "^5.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@chromatic-com/storybook": "^1.5.0",
    "@radix-ui/react-label": "^2.0.2",
    "@storybook/addon-essentials": "^8.1.4",
    "@storybook/addon-interactions": "^8.1.4",
    "@storybook/addon-links": "^8.1.4",
    "@storybook/addon-onboarding": "^8.1.4",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.2",
    "@storybook/blocks": "^8.1.4",
    "@storybook/react": "^8.1.4",
    "@storybook/react-webpack5": "^8.1.4",
    "@storybook/test": "^8.1.4",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/react-flatpickr": "^3.8.11",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.1",
    "cssnano": "^7.0.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.0.1",
    "storybook": "^8.1.4",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
