{
  "name": "beta-parity-react",
  "version": "0.3.4",
  "description": "Beta Parity React Components",
  "main": "ui/index.js",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "npm run build:ui",
    "publish": "npm run publish:lib",
    "delete:ui": "rimraf ui",
    "install:package": "npm install",
    "publish:lib": "npm run build:ui && npm publish",
    "dev:all": "npm run delete:ui && concurrently \"npm run dev:postcss\" \"npm run dev:babel\" \"npm run dev:ts\"",
    "dev:postcss": "npx postcss src/components/**/*.css --base src/components --dir ui --watch",
    "dev:babel": "npx babel src/components --out-dir ui --extensions \".ts,.tsx\" --watch",
    "dev:ts": "tsc --project tsconfig.lib.json --watch",
    "build:ui": "npm run delete:ui && npm run build:postcss && npm run build:babel && npm run build:ts && npm run build:ts-alias",
    "build:postcss": "cross-env NODE_ENV=production npx postcss src/components/**/*.css --base src/components --dir ui",
    "build:babel": "npx babel src/components --out-dir ui --extensions \".ts,.tsx\"",
    "build:ts": "tsc --project tsconfig.lib.json",
    "build:ts-alias": "tsc-alias --project tsconfig.lib.json"
  },
  "keywords": [
    "parity",
    "react",
    "components",
    "ui"
  ],
  "author": "Bitas Labs",
  "license": "ISC",
  "dependencies": {
    "@floating-ui/react": "^0.26.20",
    "classnames": "^2.5.1",
    "flatpickr": "^4.6.13",
    "lucide-react": "^0.379.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-flatpickr": "^3.10.13",
    "react-number-format": "^5.4.3",
    "rimraf": "^6.0.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/react-flatpickr": "^3.8.11",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.1",
    "cssnano": "^7.0.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.0.1",
    "postinstall-postinstall": "^2.1.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.3",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
